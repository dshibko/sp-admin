            var value = aData[3];
            if (competition != value && competition != "-1"){
                return false;
            }
            return true;
        }
    );

    //Filter by type
    jQuery.fn.dataTableExt.afnFiltering.push(
        function( oSettings, aData, iDataIndex ) {
            var isUpcoming = parseInt(jQuery('.type-filter').val());
            var value = aData[5];
            return (isUpcoming && value == PRE_MATCH_STATUS) || (!isUpcoming && value != PRE_MATCH_STATUS);
        }
    );

    //Date sorting
