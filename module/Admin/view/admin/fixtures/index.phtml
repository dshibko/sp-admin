     var PRE_MATCH_STATUS = '<?php echo \Application\Model\Entities\Match::PRE_MATCH_STATUS;?>'
    //Filter by season
    jQuery.fn.dataTableExt.afnFiltering.push(
        function( oSettings, aData, iDataIndex ) {
            var season= jQuery('.seasons-filter').val();
            var value = aData[4];
            if (season != value){
                return false;
            }
            return true;
        }
    );

    //Filter by competition
    jQuery.fn.dataTableExt.afnFiltering.push(
        function( oSettings, aData, iDataIndex ) {
